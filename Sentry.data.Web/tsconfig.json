{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "skipLibCheck": true //only type check source code
  },
  "exclude": [
    "node_modules"
  ],
  "include": [ "./ts/**/*" ]
}