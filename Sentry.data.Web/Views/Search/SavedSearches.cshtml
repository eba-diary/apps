@model SavedSearchDropdownModel
    
<div class="btn-group mr-2">
    <button class="btn btn-primary waves-effect waves-light filter-search-save" data-toggle="modal" data-target="#filter-search-save-modal">Save Search</button>
    <button class="btn btn-primary dropdown-toggle dropdown-toggle-split waves-effect waves-light filter-search-save-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
    <div class="dropdown-menu saved-search-menu">
        @if (Model.SavedSearchOptions.Any())
        {
            foreach (SavedSearchOptionModel option in Model.SavedSearchOptions.OrderBy(o => o.SavedSearchName).ToList())
            {
                <div class="saved-search-option-container" id="saved_@option.SavedSearchId">
                    <a class="dropdown-item @(option.SavedSearchName == Model.ActiveSearchName ? "active" : "") saved-search-option-name" href="../../@option.SavedSearchUrl">@option.SavedSearchName</a>
                    
                    <div class="@(option.IsFavorite ? "fas lt_gold" : "far gray") fa-star saved-search-favorite ml-2 p-2 clickable" id="savedFavorite_@option.SavedSearchId" data-id="@option.SavedSearchId"></div>
                    <span class="spinner-border spinner-border-sm saved-search-option-spinner lt_gold ml-3 display-none" id="favoriteSpinner_@option.SavedSearchId"></span>
                    
                    <div class="far fa-edit dsc-blue-text p-2 saved-search-edit clickable" data-id="@option.SavedSearchId" data-name="@option.SavedSearchName"></div>
                    
                    <div class="icon-trash p-2 mr-2 text-danger saved-search-delete clickable" id="savedDelete_@option.SavedSearchId" data-id="@option.SavedSearchId"></div>
                    <span class="spinner-border spinner-border-sm text-danger saved-search-option-spinner display-none" id="deleteSpinner_@option.SavedSearchId"></span>
                </div>                
            }
        }
        else
        {
            <a class="dropdown-item disabled" href="#">No Saved Searches</a>      
        }
    </div>
</div>