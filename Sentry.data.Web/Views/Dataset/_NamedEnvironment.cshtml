@model Sentry.data.Web.DatasetModel
<div class="md-form">
    <label class="active" for="">Named Environment</label> <!-- Not using helper for this because it causes duplicate labels and MDB select snatches it from text box -->
    <div class="dropdown-container">
        <span id="namedEnvironmentSpinner"></span>
        @if (Model.DatasetId == 0)
        {
            if (Model.NamedEnvironmentDropDown.Any())
            {
                @Html.DropDownListFor(x =>
                          x.NamedEnvironment,
                          Model.NamedEnvironmentDropDown,
                          new { @class = "mdb-select" })
            }
            else
            {
                @Html.TextBoxFor(x => x.NamedEnvironment, new { @class = "form-control" })
            }
            @Html.ValidationMessageFor(model => Model.NamedEnvironment, "", new { @class = "text-danger" })
        }
        else
        {
            <input id="NamedEnvironmentReadonly" placeholder="@Model.NamedEnvironment" disabled class="disabled form-control" />
            @Html.HiddenFor(model => model.NamedEnvironment)
        }
    </div>
</div>
<div class="md-form">
    @Html.LabelFor((model) => model.NamedEnvironmentType, new { @class = "active" })
    <div class="dropdown-container">
        <span id="namedEnvironmentTypeSpinner"></span>
        @if (Model.DatasetId == 0)
        {
            if (Model.NamedEnvironmentDropDown.Any())
            {
                @Html.DropDownListFor(x => x.NamedEnvironmentType, Model.NamedEnvironmentTypeDropDown, new { @class = "mdb-select", @disabled = "true" })
                @Html.HiddenFor(x => x.NamedEnvironmentType)
            }
            else
            {
                @Html.DropDownListFor(x => x.NamedEnvironmentType, Model.NamedEnvironmentTypeDropDown, new { @class = "mdb-select" })
            }
            @Html.ValidationMessageFor(model => Model.NamedEnvironmentType, "", new { @class = "text-danger" })
        }
        else
        {
            <input id="NamedEnvironmentTypeReadonly" placeholder="@Model.NamedEnvironmentType" disabled class="disabled form-control" />
            @Html.HiddenFor(model => model.NamedEnvironmentType)
        }
    </div>
</div>