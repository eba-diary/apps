@{
    string color = "dsc-" + Model.CategoryColor + "-text";
}
<div class="" id="schemaSection">

    @if (!Model.DisplayTabSections)
    {
        <div id="columnsInThisSchema">
            <h3 class="detailSection @color">Columns</h3>
        </div>
    }


    <div id="">
        <div id="delroyFriends">
            <ol class="breadcrumb mb-1" id="delroyBreadcrumb" data-page-color="@color"></ol>
            <div class="row">
                <div class="col">
                    <table class="table table-striped table-bordered table-hover nowrap" id="delroyTable">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Is Array</th>
                                <th>Length</th>
                                <th>Precision</th>
                                <th>Scale</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>