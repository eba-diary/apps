@{
    string color = Model.CategoryColor;
    string headerColor = "categoryBanner-" + Model.CategoryColor;
}

<div class="@(Model.DatasetFileCount == 0 ?"visible-item":"hidden-item")">
    <h3 class="@color">No Data Files Available</h3>
</div>

<div class="@(Model.DatasetFileCount != 0 ?"visible-item":"hidden-item")">
    <hr id="schemaHR" />
    <div class="row">
        <div class="col-lg-12">
            <div>
                <h3 class="@color">Data Preview (Top 20 Rows)</h3>
            </div>
        </div>
    </div>
    <div data-bind="visible: DataLoading() == true">
        <div class="row" style="height: 150px;">
            <div class="col-lg-12">
                <div class="dataPreviewSpinner"></div>
            </div>
        </div>
    </div>
    <div id="dataSection" data-bind="visible: DataLoading() == false">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-bordered @color" id="datasetRowTable">
                    <thead>
                        <tr id="tableFirstRow" class="filter-row"></tr>
                        <tr id="tableColumnIDs" class="table-header table-header_@color @headerColor"></tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <hr />
        </div>
    </div>
</div>