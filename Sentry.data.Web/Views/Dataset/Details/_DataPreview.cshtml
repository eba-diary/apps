@{
    string color = "dsc-" + Model.CategoryColor + "-text";
    string headerColor = "categoryBanner-" + Model.CategoryColor;
}

@if (!Model.DisplayTabSections)
{
    <div>
        <h3 class="@color pt-1">Data Preview (Top 20 Rows)</h3>
    </div>
}

<div class="@(Model.DatasetFileCount == 0 ?"visible-item":"hidden-item")">
    <h5 class="@color pt-1">No Data Files Available</h5>
</div>

<div class="@(Model.DatasetFileCount != 0 ?"visible-item":"hidden-item")">
    <div id="dataSection" data-bind="visible: DataLoading() == false">
        <div class="row">
            <div class="col">
                <table class="table table-striped table-bordered table-hover nowrap" id="datasetRowTable" aria-describedby="Dataset Schema Preview Table">
                    <thead>
                        <tr id="tableFirstRow" class="filter-row">
                            <th></th>
                        </tr>
                        <tr id="tableColumnIDs" class="table-header table-header_@color @headerColor"></tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <hr />
        </div>
    </div>
</div>