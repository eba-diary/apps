@model Sentry.data.Web.DatasetMigrationRequestModel
<div id="MigrationModalSpinner" class="d-none text-center">
    <div class="preloader-wrapper big active">
        <div class="spinner-layer spinner-blue-only">
            <div class="circle-clipper left">
                <div class="circle"></div>
            </div>
            <div class="gap-patch">
                <div class="circle"></div>
            </div>
            <div class="circle-clipper right">
                <div class="circle"></div>
            </div>
        </div>
    </div>
</div>
<div id="RequestMigrationBody">
    <div id="RequestMigrationFormSection">
        @Html.HiddenFor(x => x.DatasetId)

        <div class="d-none" id="ValidationMessages">
            <ul>
            </ul>
        </div>
        <div class="md-form">
            <label class="active" for="">Target Named Environment</label>
            <div class="dropdown-container">

                @if (Model.QuartermasterManagedNamedEnvironments)
                {
                    @Html.DropDownListFor(x => x.TargetNamedEnvironment, Model.DatasetNamedEnvironmentDropDown, new { @class = "mdb-select", searchable = "Search or add here...", editable = "true" })
                }
                else if (Model.DatasetNamedEnvironmentDropDown.Any())
                {
                    @Html.DropDownListFor(x => x.TargetNamedEnvironment, Model.DatasetNamedEnvironmentDropDown, new { @class = "mdb-select", searchable = "Search or add here...", editable = "true" })
                }
                else
                {
                    @Html.TextBoxFor(x => x.TargetNamedEnvironment, new { @class = "form-control" })
                }                

                @Html.ValidationMessageFor(model => Model.TargetNamedEnvironment, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="md-form">
            <label class="active" for="">Schema <em>(Optional)</em></label>
            @Html.DropDownListFor(x => x.SelectedSchema, Model.SchemaList, new { @class = "mdb-select" })
        </div>
    </div>
    <div class="d-none" id="RequestMigrationSubmissionBody">
        <div>
            <p>Your request is being processed.</p>
            <p>Please do not navigate away from this page while request is being processed!</p>
        </div>
    </div>
    <div>
        <button type="button" class="btn btn-primary float-right" id="MigrationRequestSubmitButton">Submit Migration</button>
    </div>
    
    
</div>


