@model Sentry.data.Web.ManagePermissionsModel
@{
    ViewBag.Title = "Manage Dataset Permissions";
}

<div class="mt-2">
    <a href="@Url.Action("Detail", "Dataset", new {id=Model.DatasetId})" id="linkReturnToDatasetDetails"><span class="icon-chevron-left"></span>Back to Dataset Details</a>
</div>


<div class="container">
    <div class="row">
        <div class="col-12 pl-0">
            <!-- Dataset Name and Request Access-->
            <h2 class="pt-3 mb-1">
                @Model.DatasetName - Manage Permissions
            </h2>
        </div>
    </div>

    <div class="row">
        <table class="table dsc-blue-table table-bordered table-hover nowrap" id="permissionsTable">
            <thead>
                <tr class="table-header">
                    <th>Scope</th>
                    <th>Identity</th>
                    <th>Permission</th>
                    <th></th>
                </tr>
                <tr class="filter-row">
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var permission in Model.Permissions)
                {
                    <tr>
                        <td>@permission.Scope</td>
                        <td>@permission.Identity</td>
                        <td>@permission.PermissionDescription</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/dataTables")
    @Styles.Render("~/bundles/css/dataTables")

    <script>
        $(function () {
            data.Dataset.managePermissionsInit();
        });
    </script>
}
