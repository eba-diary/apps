@model Sentry.data.Web.CreateDataFileModel
@{
    ViewBag.Title = "Upload Datafile";
}

@Html.AntiForgeryToken()
<div class="form-horizontal">

    <div class="alert-warning alert">
        <button type="button" class="close" data-dismiss="alert">×</button>
        The file being uploaded should not contain sensitive data.
        <br />
        For more information on sensitive data <a target="_blank" href="http://sharepoint.sentry.com/Security/Security%20Architecture/SitePages/Home.aspx">click here.</a>
    </div>

    <br />

    @Html.HiddenFor(model => model.DatasetId)

    <div class="form-group">
        @Html.Label("Schema", new { @class = "col-md-2 control-label" })
        <div class="col-lg-8 edit-dataset-row" >
            <select class="form-control" id="configList" name="filterSelector">
                @foreach (var a in Model.DatasetFileConfigNames)
                {
                    if (int.Parse(a.Key) == ViewBag.CurrentConfigId)
                    {
                        <option value="@a.Key" selected="selected">@a.Value</option>
                    }
                    else
                    {
                        <option value="@a.Key">@a.Value</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="file" class="edit-dataset-row file-load" id="DatasetFileUpload" />
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary d-none" id="btnUploadFile"><i class="fas fa-cloud-upload-alt"></i>Upload</button>
</div>
