@model BusinessIntelligenceHomeModel

@{
    ViewBag.Title = "Business Intelligence at Sentry";
}

<div id="bi-page-wrapper" class="text-center">
    <h2 id="bi-welcome-text">Welcome to the Sentry Business Intelligence Portal. Please type below to search or choose a category.</h2>
    
    @{
        var category = Model.Categories.ToList();
        int c = category.Count();
        string[] colors = new string[] { "blue", "green", "gold", "plum", "orange", "blueGray" };
    }

    <div class="container">
        <div id="bi-search-wrapper" class="ds-grid col-md-12">
            <div class="row">
                @{
                    using (Html.BeginForm(@"BusinessIntelligence", "Search", FormMethod.Get, new { @class = "navbar-form navbar-center", @id = "DatasetSearch" }))
                    {
                    <div id="bi-search-input-wrapper" class="input-group">
                        <span class="input-group-addon clickable bi-search-icon" onclick="$(function() {$('#SearchText').focus();});"><i class="glyphicon glyphicon-search"></i></span>

                        <input type="text" id="SearchText" name="searchPhrase" class="form-control bi-search-textbox" placeholder="Search from @Model.DatasetCount Exhibits and Dashboards ..." />
                    </div>
                    }
                }
            </div>
        </div>
        <div id="bi-tile-wrapper" class="ds-grid col-md-12">
            @for (int i = 0; i < c; i++)
            {
                if (i % 3 == 0)
                {
                    @:<div class="row text-center">
                }

                var color = "";
                //html classes should not start with numbers so prefix with underscore (_).
                long number1 = 0;
                if (long.TryParse(category[i].Name.Substring(0, 1), out number1))
                {
                    color = "_" + category[i].Name.ToLower().Replace(" ", "_") + "Tile";
                }
                else
                {
                    color = category[i].Name.ToLower().Replace(" ", "_") + "Tile";
                }

                <div class="col-md-3 tile border_@category[i].Color @color ">
                    <a class="" href="~/Search/BusinessIntelligence/Index?category=@category[i].Name">
                        <img src="/Images/Category/BusinessIntelligence/@{@category[i].Name}.svg" class="bi-tile-image">
                        <div class="bi-tile-header">@category[i].Name</div>
                        <div class="bi-tile-description"></div>
                    </a>
                </div>
                if (i % 3 == 2 || i + 1 == c)
                {
                    @:</div>
                }
            }

            <div class="row text-center">
                <div class="bi-upload-row">
                    @if (Model.CanManageReports)
                    {
                        <button type="button" class="btn btn-default btn-lg bi-operation-button" id="CreateExhibit">
                            <span class="glyphicon glyphicon-plus text-primary"></span> Create Exhibit
                        </button>
                    }        
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(function () {
            data.Report.IndexInit();
        });
    </script>
}