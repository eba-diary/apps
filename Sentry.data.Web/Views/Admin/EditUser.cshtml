@model UserModel
@{
    ViewData["Title"] = "Edit User - " + Model.FullName;
}
    

@section Styles
{
    @Styles.Render("~/bundles/css/dataTables")
}

<div class="page-header">
    <h1>Edit User: @Model.FullName</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal form-condensed">

        <ul class="nav nav-tabs">
            <li class="active"><a href="#generalTab" data-toggle="tab">General</a></li>
            <li><a href="#paymentMethodsTab" data-toggle="tab">Payment Methods</a></li>
        </ul>
        <div id="userTabs" class="tab-content">
            <div class="tab-pane fade active in" id="generalTab">
                <div>
                    <fieldset class="panel-body">

                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        @Html.HiddenFor((model) => model.Id)

                        <div class="form-group">
                            @Html.LabelFor((model) => model.FullName, new {@class = "control-label col-sm-2"})
                            <div class="col-sm-10">
                                <p class="form-control-static">@Html.DisplayFor((model) => model.FullName)</p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor((model) => model.AssociateId, new {@class = "control-label col-sm-2"})
                            <div class="col-sm-10">
                                <p class="form-control-static">@Html.DisplayFor((model) => model.AssociateId)</p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor((model) => model.Ranking, new {@class = "control-label col-sm-2"})
                            <div class="col-sm-1">
                                @Html.EditorFor((model) => model.Ranking, new {htmlAttributes = new {@class = "form-control"}})
                                @Html.ValidationMessageFor((model) => model.Ranking, "", new {@class = "text-danger"})
                            </div>
                        </div>
                    </fieldset>
                    <fieldset class="panel-body">
                        <legend>Shipping Address</legend>
                        @Html.EditorFor((model) => model.ShippingAddress)
                    </fieldset>
                    <fieldset class="panel-body">
                        <legend>Billing Address</legend>
                        @Html.EditorFor((model) => model.BillingAddress)
                    </fieldset>

                    <div class="form-group panel-body">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            @Html.ActionLink("Cancel", "ManageUsers", null, new {@class = "btn btn-link"})
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane fade" id="paymentMethodsTab">
                <fieldset class="panel-body">
                    @Html.EditorFor((model) => model.PaymentMethods, "PaymentMethods")
                </fieldset>
            </div>
        </div>


    </div>
}

@section Scripts
{

}
