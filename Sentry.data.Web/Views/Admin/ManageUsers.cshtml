@{
    ViewData["Title"] = "Manage Users";
}

@section Styles
{
    @Styles.Render("~/bundles/css/dataTables")
}

@section Documentation
{
<h4>DataTables</h4>
<p>
    This page shows an example of displaying data in a grid using the DataTables javascript plugin.
    DataTables supports in-column filtering, overall searching, paging, and more.  This grid is an example
    of server-side paging/sorting/filtering.
</p>
<p>
    DataTables is wired up to your .Net objects using the DataTablesQueryableAdapter that makes
    the amount of code you have to write very minimal.  Check out the <code>GetUserInfoForGrid()</code>
    method in the <code>AdminController</code>.
</p>
<div class="text-right"><a href="/User/Switch" id="next">Next <i class="fa fa-angle-right"></i></a></div>
}

<div class="page-header">
    <h1>Manage Users</h1>
</div>


<table class="table table-striped table-bordered" id="userTable" width="100%">
    <thead>
        <tr class="filter-row">
            <td>Filter Id</td>
            <td>Filter Name</td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <th>Associate Id</th>
            <th>Name</th>
            <th>Ranking</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<div id="userToolbar">
    <button id="addUser" type="button" class="btn btn-link"><i class="glyphicon glyphicon-plus text-success"></i> Add User</button>
    <a href="#" id="exportToExcel"><img src="~/Images/excel_active.png" /></a>
</div>

<script type="text/template" id="userTableRowIcons">
    <a href="#" onclick="data.ManageUsers.showConfirmDeleteModal(this); return false;" class="table-row-icon" title="Delete User"><i class="glyphicon glyphicon-remove text-danger"></i></a>
    <a href="@Url.Action("EditUser")/{0}" class="table-row-icon" title="Edit User"><i class='glyphicon glyphicon-pencil text-primary'></i></a>
</script>

@section Scripts
{
@Scripts.Render("~/bundles/dataTables")


<script>
        $(function () {
            data.ManageUsers.Init();
        });
</script>
}
