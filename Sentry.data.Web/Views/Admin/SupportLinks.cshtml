            <div class="col-sm-12 col-md-6">
                <h1>My Links</h1>
            </div>
            <div class="col-sm-12 col-md-6">
                <button type="button" class="btn btn-primary waves-effect waves-light right-aligned" data-toggle="modal" data-target="#AddLinkModal" id="addLinkButton">
                    Add Link
                </button>
            </div>
        </div>

            
