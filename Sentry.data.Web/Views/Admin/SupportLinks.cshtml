
@model SupportLinkWrapper
@{
    ViewBag.Title = "_AdminTest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="linkList">
    <div  class="form-inline">
        <h1>My Links</h1>

        <button type="button" class="btn btn-primary waves-effect waves-light float-right" data-toggle="modal" data-target="#exampleModal" id="addLinkButton">
            Add Link
        </button>
    </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card form-wrapper" id="toggleDiv">
                        <div class="card-body">

                            <h3 class="card-title">Add Support Link</h3>

                            <div class="md-form">

                                <input type="text" id="name" class="form-control" required />
                                <label for="name" class="">Enter Link Name</label>

                            </div>
                            <div class="md-form">

                                <label for="description" class="">Enter Description For Link</label>
                                <input type="text" id="description" class="form-control" />

                            </div>
                            <div class="bs-component">


                                <label for="url">Enter an https:// URL:</label>
                                <input type="url" id="url" class="form-control" placeholder="https://example.com" required />

                            </div>
   
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect waves-light" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary waves-effect waves-light">Submit</button>
                </div>
            </div>
        </div>
    </div>
            
    

    <div class="list-group">
        @foreach (@Sentry.data.Web.SupportLinkModel supportLinkModel in Model.AllSupportLinks)
        {
            <a href="@supportLinkModel.Url" target="_blank" class="list-group-item">@supportLinkModel.Name</a>
        }
    </div> <br />
    <!--
    <button type="button" class="btn btn-outline-danger">Delete Link</button>
        -->
</div>

 
<style>
    #linkList{
        width: 80%;
        margin: auto;
    }

    #addLinkButton{
        float: right;
    }
</style>