
@model Dictionary<string, string>
@{
    ViewBag.Title = "Admin";
    ViewBag.Fluid = true;
}


<div class="row">
    <div class="card form-wrapper col-lg-2 side-nav-wrapper" id="sideNav">
        <div class="card-body">
            <h2 class="card-title">Admin Page</h2>

            @foreach (var key in Model.Keys)
            {
                <a href="#" data-url='@Url.Action("GetAdminAction", "Admin", new { viewId = key })' class="load-partial-view"><h4>@Model[key]</h4></a>

            }
        </div>
    </div>
    <div class="col-lg-10">
        <div id="partial-view-test">

            <div class="list-group">
                <h1>My Links</h1>
                <a href="#" class="list-group-item">Dapibus ac facilisis in</a>
                <a href="#" class="list-group-item">Morbi leo risus</a>
                <a href="#" class="list-group-item">Porta ac consectetur ac</a>
                <a href="#" class="list-group-item">Vestibulum at eros</a>
            </div>





            <button type="button" class="btn btn-outline-info waves-effect">Info</button>
            <button type="button" class="btn btn-outline-danger">Delete</button>


            <div class="card form-wrapper">
                <div class="card-body">
                    <h3 class="card-title">Add Information</h3>
                    
                    <form class="bs-component">
                        <div class="md"
                    </form>
                </div>
            </div>

            <div id="toggleDiv">
                <h3>Add Information</h3>
                <form>
                    <label for="name">Name:</label><br>
                    <input placeholder="Name" />

                    <label for="description">Description:</label><br>
                    <input placeholder="Description" />

                    <label for="url">First :</label><br>
                    <input placeholder="Url" />

                    <button type="button">Add Link</button>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/dataTables")
    @Styles.Render("~/bundles/css/dataTables")
    <script>
        $(function () {
            data.Admin.AdminPageInit();
        });

        $(function () {
            $("#toggleBtn").click(function () {
                $("#toggleDiv").toggle();
            });
        });

    </script>
}

<style>
    #toggleDiv{
        display: block;
    }
</style>