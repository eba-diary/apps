@model Sentry.data.Web.BaseEntityModel

<div>

    @Html.HiddenFor(model => model.TagIds)

    <div class="form-group">
        <span class="control-label col-md-2">Tags</span>
        <div class="col-md-8">
            <select id="TagSelector" style="width: 100%"></select>
        </div>
        <div class="col-md-2">
            <button id="addNewTagBtn" onclick="return false;" type="button" style="float: right;" class="btn-success btn"><span class="glyphicon glyphicon-plus"></span> Add New Tag</button>
        </div>
    </div>

    <div class="form-group fieldDescription">
        <label class="control-label col-md-2"></label>
        <div class="col-md-10">
            <span class="text-muted">
                <em>We recommend that you limit the amount of Tags to five.</em>
            </span>
        </div>
    </div>


</div>
