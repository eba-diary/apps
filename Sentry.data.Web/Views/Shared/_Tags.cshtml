@model Sentry.data.Web.BaseEntityModel

<div>

    @Html.HiddenFor(model => model.TagIds)

    <div class="md-form">
        <span class="control-label">Tags</span>
            <select id="TagSelector" style="width: 100%"></select>
            <button id="addNewTagBtn" onclick="return false;" type="button" style="float: right;" class="btn-success btn"><span class="icon-plus"></span> Add New Tag</button>
    </div>

    <div class="md-form fieldDescription">
        <label class="control-label"></label>
            <span class="text-muted">
                <em>We recommend that you limit the amount of Tags to five.</em>
            </span>
    </div>


</div>
