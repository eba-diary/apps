@model Sentry.data.Web.TagModel
@{
    ViewBag.Title = "Create Tag";
}

@using (Html.BeginForm("TagForm", "BusinessIntelligence", FormMethod.Post, new { @id = "TagForm" }))
{
    @Html.AntiForgeryToken()

    <div class="tagFormErrorBox" id="TagFormErrorBox" style="display:none"></div>
    @Html.HiddenFor(model => model.CreationUserId)
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.TagName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TagName, new { @class = "form-control edit-dataset-row" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-9"><span id="tagWarningText" /></div>
        </div>
        <div class="form-group">
            @Html.LabelFor((model) => model.SelectedTagGroup, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor((model) => model.SelectedTagGroup, Model.AllTagGroups, new { @class = "form-control edit-dataset-row" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control edit-dataset-row" })
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <div id="createTagSpinner"></div>
        <input type="submit" class="btn btn-primary" id="CreateTagButton" data-id="@Model.TagId" value="Create Tag" />
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
    </div>

}
<script>
    $(function () {
        data.Tags.CreateInit();
    });
</script>
