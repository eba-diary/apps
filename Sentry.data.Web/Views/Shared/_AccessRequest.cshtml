@model Sentry.data.Web.AccessRequestModel
@{
    ViewBag.Title = "Request Dataset Access";
}

@using (Html.BeginForm("SubmitAccessRequest", "Dataset", FormMethod.Post, new { @id = "AccessRequestForm" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">

    <div class="accessRequestModelText" style="width:auto">
        <p>Dataset permission requests will utilize HPSM for approval.  Due to this process, a short delay in permission implementation can be expected.</p>
    </div>
    <br />

    <div class="accessRequestErrorBox" id="AccessRequesrErrorBox" style="display:none">
        
    </div>

    @Html.HiddenFor(model => model.DatasetId)
    <div class="form-group">
        @Html.LabelFor(m => m.DatasetName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DatasetName, new { @disabled = "disabled", @class = "form-control edit-dataset-row" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AdGroupName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.AdGroupName, new { @class = "form-control edit-dataset-row" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.BusinessReason, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.BusinessReason, new { @class = "form-control edit-dataset-row" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor((model) => model.SelectedApprover, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor((model) => model.SelectedApprover, Model.AllApprovers, new { @class = "form-control edit-dataset-row" })
            @Html.ValidationMessageFor((model) => model.SelectedApprover, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    @Html.HiddenFor(model => model.SelectedPermissions)
    @Html.LabelFor((model) => model.SelectedPermissions, new { @class = "col-md-10" }) <br /><br />
    <div style="margin-left:30px">
        @foreach (var item in Model.AllPermissions)
        {
            <div class="form-group">
                <div class="col-sm-1">
                    <input type="checkbox" value="@item.PermissionName" data-code="@item.PermissionCode" />
                </div>
                <div class="col-md-9">
                    <label class="control-label">@item.PermissionDescription</label>
                </div>
            </div>
        }
    </div>
</div>


    <div class="modal-footer">
        <div id="accessRequestSpinner"></div>
        <input type="submit" class="btn btn-primary" id="SubmitAccessRequestButton" data-id="@Model.DatasetId" value="Request Access" />
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
    </div>
}