
@model Sentry.data.Web.Models.AdminPage.DataReprocessingModel
@{
    ViewBag.Title = "_AdminTest";
}
<h1>Reprocess Data Files</h1>
<!-- Data Set Dropdown Menu-->
<h3>Data Sets</h3>
@Html.DropDownListFor(m => m.allDatasets,
                      new SelectList(Model.allDatasets, "Value", "Text"),
                      "Please select Dataset",
                      new { @style = "width:800px; height: 30px;" })


<!-- Schema Dropdown Menu-->
<h3>Schema</h3>
<select class="mbd-select" , id="SchemaDropdown" style="width:800px; height:30px;">
    <!--populated asyncronously via ajax-->
</select>

<!-- Flow Steps Dropdown Menu-->
<h3>Flow Steps</h3>
<select class="mbd-select" , id="flowStepsDropdown" style="width:800px; height:30px;">
    @for (var x = 0; x < Model.flowSteps.Count; x++)
    {
        <option id="option" value="flowSteps"> @Model.flowSteps[x]</option>
    }
</select>

<br />
<br />
<br />
