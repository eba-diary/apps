@model Sentry.data.Core.RequestHeader

@using (Html.BeginCollectionItem("Headers"))
{    
    <div class="form-group">
        <div class="col-md-12">
            <div class="col-md-5 headerEntry">
                @Html.TextBoxFor(m => m.Key, new { @value = "", @class = "form-control edit-dataset-row col-md-3" })
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-5 headerEntry">
                @Html.TextBoxFor(m => m.Value, new { @value = "", @class = "form-control edit-dataset-row col-md-3" })
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2"><a class="removeHeader" style="display: inline-block; margin-left: 10px;"><i class="icon-minus"></i> Remove Header</a></div>
        </div>        
    </div>
}
