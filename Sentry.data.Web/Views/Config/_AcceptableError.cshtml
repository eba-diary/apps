@model Sentry.data.Web.Models.Config.DataSource.AcceptableErrorModel

@using (Html.BeginCollectionItem("AcceptableErrors"))
{
    <div class="container">
        <div class="form-row">
            <div class="col-5">
                <div class="md-form mt-0">
                    @Html.Label("Error Key", new { @value = "", @class = "control-label" })
                    @Html.TextBoxFor(m => m.ErrorMessageKey, new { @value = "", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-5">
                <div class="md-form mt-0">
                    @Html.Label("Error Value", new { @value = "", @class = "control-value" })
                    @Html.TextBoxFor(m => m.ErrorMessageValue, new { @value = "", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-2 align-self-center mb-3">
                <a class="removeAcceptableError"><em class="fas fa-minus pr-3"></em>Remove</a>
            </div>
        </div>
    </div>
}
