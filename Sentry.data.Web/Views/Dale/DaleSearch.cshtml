@using Sentry.data.Web;
@model DaleSearchModel


<div style="background-image: url('/Images/Dale/DataInventoryLogo.jpg'); background-position: 50% 50%; height: 100px; background-repeat: no-repeat;"></div>

<div class="form-group" style="text-align: center;">
    @Html.RadioButtonFor((model) => model.Destiny, Sentry.data.Core.GlobalEnums.DaleDestiny.Table)
    Table
    @Html.RadioButtonFor((model) => model.Destiny, Sentry.data.Core.GlobalEnums.DaleDestiny.Column, new { Checked = "checked" })
    Column
    @Html.RadioButtonFor((model) => model.Destiny, Sentry.data.Core.GlobalEnums.DaleDestiny.View)
    View
</div>

<div style="text-align: center;">
    <div>

        @Html.TextBoxFor((model) => model.Criteria, new { id = "daleSearchCriteria" })

        <button id="askDaleBtn" class="btn btn-primary">
            Search!
        </button>

        <button id="askDaleBtnFake" class="btn btn-primary" style="display:none" disabled>
            <i class="fa fa-circle-o-notch fa-spin"></i>  Searching archives...
        </button>

    </div>
</div>


@Html.Partial("~/Views/Dale/DaleResult.cshtml")


@section Scripts {
    @Scripts.Render("~/bundles/dataTables")
    <script type="text/javascript">

        $(function () {
            data.Dale.init();
        });

    </script>
}