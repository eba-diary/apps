@model List<FavoriteItemModel>


@if (Model.Count == 0)
{
    <div class="noFavoriteBox favoriteCenter">
        <div class="noFavoriteMessage"><h5>There are no favorites to list.<br /><br />Be a data adventurer... start exploring!</h5></div>
    </div>
}

@foreach (FavoriteItemModel item in Model)
{
    <div class="display-table">
        <div class="display-tablecell text-middle">
            <img src="@item.Img" />
        </div>
        <div class="display-tablecell text-middle">
            @if (item.Title.Length > 50)
            {
                if (item.FeedName == "Business Intelligence" && item.FeedUrlType == "file")
                {
                    <a onclick='GetFile("@item.FeedUrl.Replace(@"\",@"\\")");event.preventDefault();' href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="@item.Title">@item.DisplayTitle</a>
                }
                else if (item.FeedName == "Business Intelligence" && item.FeedUrlType != "file")
                {
                    <a href="@item.FeedUrl" target="_blank" data-toggle="tooltip" data-placement="top" title="" data-original-title="@item.Title">@item.DisplayTitle</a>
                }
                else
                {
                    <a href="@item.Url" target="_blank" data-toggle="tooltip" data-placement="top" title="" data-original-title="@item.Title">@item.DisplayTitle</a>
                }
            }
            else
            {
                if (item.FeedName == "Business Intelligence" && item.FeedUrlType == "file")
                {
                    <a onclick='GetFile("@item.FeedUrl.Replace(@"\",@"\\")");event.preventDefault();' href="#">@item.DisplayTitle</a>
                }
                else if (item.FeedName == "Business Intelligence" && item.FeedUrlType != "file")
                {
                    <a href="@item.FeedUrl" target="_blank">@item.DisplayTitle</a>
                }
                else
                {
                    <a href="@item.Url" target="_blank">@item.DisplayTitle</a>
                }
            }
        </div>
    </div>
}