@model Sentry.data.Core.ComponentElement

@{ 
    string name = Model.Name.Split(' ').First();
    string topLevelRow = "";
    if(Model.Elements.Count > 0)
    {
        topLevelRow = "row_" + name;
        Model.Elements = Model.Elements.OrderBy(x => x.Name).ToList();
    }
}

<div class="@topLevelRow">
    @RecursiveRow(Model)
</div>

<div class="hiddenLayer_@name">
    @foreach (Sentry.data.Core.ComponentElement comp in Model.Elements)
    {
        <div class="indent">
            @RecursiveRow(comp)
        </div>
    }
</div>

@helper RecursiveRow(Sentry.data.Core.ComponentElement ce)
{
    string ceName = Model.Name.Split(' ').First();
    string color = ViewData["color"].ToString();
    string clcType = ViewData["clcType"].ToString();
    string link = (ce.Link != null) ? "rowLink" : "";
    
    if (ce.Elements.Count > 0)
    {
        <div class="row tableRow @link">
            <span class="glyphicon glyphicon-chevron-down layerArrow_@ceName element @color parentRow"></span>
            <div class="@color">@ce.Name</div>
        </div>
    }
    else if (ce.Link == null)
    {
        <div class="row tableRow @link">
            <div class="element @color">@ce.Name</div>
        </div>
    }
    else if (clcType == "CUBE")
    {
        <a href="@Url.Action("ODCFile", "ExternalFile", Model)" class="noHover" data-toggle="tooltip" data-placement="top" title="" data-original-title="Open @ce.Name ODC file">
            <div class="row tableRow @link">
                <div class="element">@ce.Name</div>
            </div>
        </a>
    }
    else
    {
        <a href="@ce.Link" class="noHover">
            <div class="row tableRow @link">
                <div class="element">@ce.Name</div>
            </div>
        </a>
    }
}




